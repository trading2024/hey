{
  "name": "@hey/api",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "codegen": "prisma generate --schema ./src/db/schema.prisma > /dev/null",
    "dev": "nodemon -w src -x tsx src/server.ts",
    "get-invoice-countries": "ts-node ./src/script/get-invoice-countries.ts",
    "postinstall": "pnpm codegen",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.ts,.tsx",
    "prettier": "prettier --check \"**/*.{js,ts,tsx,md}\"  --cache",
    "prettier:fix": "prettier --write \"**/*.{js,ts,tsx,md}\"  --cache",
    "prisma:clean": "prisma migrate reset --schema ./src/db/schema.prisma",
    "prisma:format": "prisma format --schema ./src/db/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./src/db/schema.prisma",
    "prisma:seed": "ts-node ./src/db/seed.ts",
    "save-invoices": "ts-node ./src/script/save-invoices.ts",
    "start": "NODE_ENV=production tsx src/server.ts",
    "typecheck": "tsc --pretty"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.623.0",
    "@aws-sdk/client-sts": "^3.623.0",
    "@hey/abis": "workspace:*",
    "@hey/data": "workspace:*",
    "@hey/db": "workspace:*",
    "@hey/helpers": "workspace:*",
    "@irys/sdk": "^0.2.9",
    "@lens-protocol/metadata": "^1.2.0",
    "@prisma/client": "^5.17.0",
    "axios": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-file-routing": "^3.0.3",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "fast-xml-parser": "^4.4.1",
    "linkedom": "^0.18.4",
    "puppeteer": "^22.15.0",
    "rate-limit-redis": "^4.2.0",
    "request-ip": "^3.3.0",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "ua-parser-js": "^2.0.0-beta.3",
    "urlcat": "^3.1.0",
    "uuid": "^10.0.0",
    "viem": "^2.18.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@hey/config": "workspace:*",
    "@hey/types": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.15",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.1.0",
    "@types/request-ip": "^0.0.41",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.17.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
